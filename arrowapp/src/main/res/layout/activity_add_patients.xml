<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_patients"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arrowhc.harry.arrowhc.Add_patients">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Doctor_Id"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="26dp"
        android:id="@+id/didedittext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/didedittext"
        android:layout_alignLeft="@+id/didedittext"
        android:layout_alignStart="@+id/didedittext"
        android:layout_marginTop="21dp"
        android:id="@+id/Pnameedittext"
        android:hint="Patient Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/Departmentedittext"
        android:layout_alignRight="@+id/Departmentedittext"
        android:layout_alignEnd="@+id/Departmentedittext"
        android:layout_marginTop="12dp"
        android:id="@+id/Roomedittext"
        android:hint="Room No" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Roomedittext"
        android:layout_alignParentRight="true"
        android:id="@+id/spinner2"
        android:entries="@array/department"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/Departmentedittext"
        android:hint="Department"
        android:layout_below="@+id/Pnameedittext"
        android:layout_alignLeft="@+id/Pnameedittext"
        android:layout_alignStart="@+id/Pnameedittext" />

    <Button
        android:text="Add Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:id="@+id/add_patients"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
